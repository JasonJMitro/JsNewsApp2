<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_search_item_default"
        android:inputType="textNoSuggestions"
        android:key="@string/settings_search_item_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_search_item_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_pages_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_pages_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_pages_label" />


</PreferenceScreen>